~/Desktop/shubhi/C++/chapter1 $ cat input.cpp 
#include<iostream>
using namespace std;

int main(){

  string a;
  while(getline(cin,a)){
    if(a=="bye"){
      cout<<a<<endl;
    }
  }
  return 0;
}
